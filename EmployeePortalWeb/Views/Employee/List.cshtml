@{
}
@model List<EmployeePortalWeb.Models.Entities.Employee>
<h1>Employees</h1>
<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone Number</th>
			<th>Subscribed To News Letter</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.PhoneNumber</td>
				<td>@employee.SubscribedToNewsletter</td>
				<td>
					<a class="btn btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-Id="@employee.Id">Edit</a>
				</td>
			</tr>
		}

		<a asp-action="Add" asp-controller="Employee" class="btn btn-danger">Add Employee</a>

	</tbody>
</table>