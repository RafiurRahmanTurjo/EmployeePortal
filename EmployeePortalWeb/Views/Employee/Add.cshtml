@model EmployeePortalWeb.Models.AddEmployeeViewModel

<h1>Add Employee</h1>
<form method="post">
<div class="mt-3">
	<label class="form-label">Name</label>
	<input type="text" class="form-control" asp-for="Name" />
</div>

<div class="mt-3">
	<label class="form-label">Email</label>
	<input type="text" class="form-control" asp-for="Email" />
</div>

<div class="mt-3">
	<label class="form-label">Phone Number</label>
	<input type="text" class="form-control" asp-for="PhoneNumber"/>
</div>

<div class="mt-3">
	<input type ="checkbox"class="form-check-input" id="SubscribedToNewsLetter" asp-for = "SubscribedToNewsletter"/>
	<label class=" form-check-label" for="SubscribedToNewsLetter">Subscribed To News Letter</label>
</div>

<div class="mt-3">
	<button type="submit" class=" btn btn-primary">Save</button>
	
</div>
</form>